{
  "name": "ng-simple-grid",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:lib": "npm run build:lib && npm start",
    "build": "ng build",
    "build:lib": "ng build simple-grid",
    "watch": "ng build --watch --configuration development",
    "test": "ng test simple-grid",
    "test:headless": "ng test simple-grid --browsers=ChromeHeadless",
    "test:headless:single": "npm run test:headless -- --watch=false",
    "format": "prettier --write \"projects/**/*.{ts,html,scss}\"",
    "lint": "ng lint",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "projects/**/*.{ts,html,scss}": [
      "prettier --write",
      "ng lint",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "~20.2.7",
    "@angular/common": "20.3.3",
    "@angular/compiler": "20.3.3",
    "@angular/core": "20.3.3",
    "@angular/forms": "20.3.3",
    "@angular/platform-browser": "20.3.3",
    "@angular/router": "20.3.3",
    "rxjs": "~7.8.0",
    "tslib": "~2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.3",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.4.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.4",
    "ng-packagr": "^20.3.0",
    "prettier": "3.6.2",
    "puppeteer": "~24.28.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.0"
  }
}
